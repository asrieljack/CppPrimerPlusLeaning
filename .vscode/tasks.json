{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-current-file",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${file}", // 当前打开的文件
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}